<div class="new drill_groups">
  <h2>Create Drill Groups</h2>
  <%= form_for(@drill_group) do |f| %>
    <table>
      <tr>
        <th>Drill Group Title</th>
        <td><%= f.text_field(:drill_group_name) %></td>
      </tr>
      <tr>
        <th>Drill Difficulty</th>
        <td>
          <%= f.label 'Easy', id:'online' %>
          <%= f.check_box(:difficulty)%>
        </td>
      </tr>
    </table>
    <div class="form-buttons">
      <%= f.submit("Create Drill Group",class:'waves-effect waves-light btn') %>
      <%= link_to("Back to Drill Groups List", drill_groups_path, :class => "waves-effect waves-light btn") %>
    </div>
  <% end %>
</div>
