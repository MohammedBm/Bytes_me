<!DOCTYPE html>
<html>
  <head>
    <title>BytesMe</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <!-- navbar -->
    <div class="navbar-fixed">
      <nav>
        <div class="container">
          <div class="nav-wrapper">
            <%= link_to 'Bytes-Me!', home_path, class: "brand-logo" %>
            <ul id="nav-mobile" class="right">
                <% if user_signed_in? %>
                  <li>Hello, <%= current_user.full_name %>!</li>
                  <li><%= link_to 'Sign Out', sessions_path, method: :delete, data: {confirm: 'Logout?'} %></li>
                <% else %>
                  <li><%= link_to 'Drills', drills_path	 %> </li>
                  <li><%= link_to 'Log In', new_session_path %> </li>
                  <li><%= link_to 'Sign Up', new_user_path %> </li>
                <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </div>
    <!-- navbar end -->

    <div class="container">
      <% if flash[:notice] %>
      <div class='alert alert-success'>
        <%= flash[:notice] %>
      </div>
      <% elsif flash[:alert] %>
      <div class='alert alert-danger'>
        <%= flash[:alert] %>
      </div>
      <% end %>

      <%= yield %>
    </div>

  </body>
</html>
