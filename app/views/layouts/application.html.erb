<!DOCTYPE html>
<html>
  <head>
    <title>BytesMe</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <!-- navbar -->
    <div class="navbar-fixed">
      <nav class="z-depth-3">
        <div class="container">
          <div class="nav-wrapper">
            <%= link_to 'Bytes-Me!', home_path, class: "left brand-logo" %>
            <a href="#" data-activates="slide-out" class="right button-collapse">
              <i class="material-icons">
                <i style="margin-top: 0px" class="fa fa-bars" aria-hidden="true"></i>

              </i>
            </a>
            <ul class="right hide-on-med-and-down">
              <li><%= link_to 'Drill Groups', drill_groups_path	%> </li>
                <% if user_signed_in? %>
                <li><%= link_to 'Leaderboard', leader_boards_path %> </li>
                <li class="hello-name">|</li>
                <li><a href="#"><strong><%= current_user.full_name %></strong></a></li>
                <li><%= link_to 'Sign Out', sessions_path, method: :delete, data: {confirm: 'Logout?'} %></li>
                <% else %>
                  <li><%= link_to 'Log In', new_session_path %> </li>
                  <li><%= link_to 'Sign Up', new_user_path %> </li>
                <% end %>
            </ul>

          </div>
        </div>
      </nav>
    </div>
    <ul class="right side-nav" id="slide-out">
      <li><%= link_to 'Drill Groups', drill_groups_path	%> </li>
        <% if user_signed_in? %>
        <li><%= link_to 'Leaderboard', leader_boards_path %> </li>
          <li><%= link_to 'Sign Out', sessions_path, method: :delete, data: {confirm: 'Logout?'} %></li>
        <% else %>
          <li><%= link_to 'Log In', new_session_path %> </li>
          <li><%= link_to 'Sign Up', new_user_path %> </li>
        <% end %>
    </ul>
    <!-- navbar end -->

  <main class="bg-color" name="top">
    <%  unless current_page?(home_path)  %>
    <div class="box-page">

      <div class="container">
        <% if flash[:notice] %>
        <div class='alert alert-success'>
          <%= flash[:notice] %>
        </div>
        <% elsif flash[:alert] %>
        <div class='alert alert-danger'>
          <%= flash[:alert] %>
        </div>
        <% end %>

      <% end %>
        <%= yield %>
      </div>
    </div>




  </main>



  <!-- footer -->
    <footer class="page-footer">
      <div class="container">
        <div class="row">
          <div style="align: center" class="col-lg-12 l4 offset-l2 s12">
            <a class="grey-text text-lighten-3" href="#!"><i class="fa fa-facebook" aria-hidden="true"></i></a>
            <a class="grey-text text-lighten-3" href="#!"><i class="fa fa-twitter" aria-hidden="true"></i></a>
            <a class="grey-text text-lighten-3" href="#!"><i class="fa fa-google" aria-hidden="true"></i></a>
            <a class="grey-text text-lighten-3" href="#!"><i class="fa fa-linkedin" aria-hidden="true"></i></a>
            <a class="grey-text text-lighten-3 flex-end" href="#top"><i class="fa" aria-hidden="true">TOP</i></a>
          </div>
        </div>
      </div>
    </footer>
    <!-- footer end -->
  </body>
</html>
